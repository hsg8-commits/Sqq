# MongoDB Connection
# احصل على رابط الاتصال من MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secret Key
# استخدم مفتاح سري قوي وفريد (يمكن توليده من: https://generate-secret.vercel.app/32)
# ⚠️ لا تستخدم القيمة الافتراضية في الإنتاج!
JWT_SECRET=your_very_secret_and_unique_jwt_key_here_change_this_please

# Environment
NODE_ENV=development

# Admin Default Credentials (used by init script)
ADMIN_DEFAULT_PASSWORD=admin123456
SUPER_ADMIN_EMAIL=admin@telegram.com

# App Configuration
NEXT_PUBLIC_APP_NAME=لوحة التحكم الإدارية
NEXT_PUBLIC_API_URL=http://localhost:3002

# Optional: Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Optional: Session Configuration
SESSION_MAX_AGE=86400
SESSION_MAX_AGE_REMEMBER=2592000
